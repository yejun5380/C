~~~c
#include <stdio.h>

int main(void)
{
    char op;
    int x,t,result;
    printf("수식을 입력하시오(예:2+5)>>");
    scanf("%d %c %d", &x, &op, &y);

switch (op)
    {
        case '+':
            result = x+y;
            break;
        case '-':
            result = x-y;
            break;
        case '*':
            result = x*y;
            break;
        case '/':
            result = x/y;
            break;
        case '%':
            result = x%y;
            break;
        default:
            printf("지원되지 않는 연산자입니다.\n");
            break;
    }
    printf("%d %c %d = %d\n",x ,op ,y ,result);
    return 0;

}
~~~


~~~c
#include <stdio.h>

int main(void)
{
    char op;
    int x, y, result;

    printf("수식을 입력하시오(예:2+5)>>");
    scanf("%d %c %d", &x, &op, &y);

    if (op=='+')
        result = x+y;
    else if(op=='-')
        result = x-y;
    else if(op=='*')
        result = x*y;
    else if(op=='/')
        result = x/y;
    else if(op=='%')
        result = x%y;
    else
            printf("지원되지 않는 연산자입니다.");

    printf("%d %c %d=%d\n", x, op, y, result);
    return 0;    
}
~~~


~~~c
#include <stdio.h>

int main(void)
{
    int i=1;

    while(i<10)
    {
        printf("%d * %d = %d\n", 2, i, 2*i);
        i++;
        if(i>9)
        {
            break;
        }
    }
}
~~~

~~~c
#include <stdio.h>

int main(void)
{
    int i=1;

    while('0')
    {
        printf("%d * %d = %d\n", 2, i, 2*i);
        i++;
        if(i>9)
        {
            break;
        }
    }
}
~~~

~~~c
#include <stdio.h>

int main(void)
{
    int i,n,sum;
    int i=1, sum=0;

    printf("정수를 입력하시오:");
    scanf("%d", &n);

    while(i<=n)
    {
        sum+=i;
        i++;
    }
    printf("1부터 %d 까지의 합은 %d입니다", n, sum);
}
~~~

~~~c
#include <stdio.h>

int main(void)
{
    int i=1, n, sum=0;

    printf("정수를 입력하시오:");
    scanf("%d", &n);

    while(i<=n)
    {
        if(i%2===0)
        {
            sum+=i;
        }
            i++;
    }
    printf("1부터 %d까지의 짝수합은 %d입니다", n, sum);
}
~~~

~~~c
#include <stdio.h>

int main(void)
{
    int i, n, sum;

    i=0;
    sum=0;
    while(i<5)
    {
        printf("값을 입력하시오:");
        scanf("%d", &n);
        sum = sum + n;
        i++;
    }
    printf("합계는 %d입니다.\n", sum);

    return 0;
}
~~~

~~~c
#include <stdio.h>

int main(void)
{
    int i, n, a, b;
    i=1;
    scanf("%d", &n);
    
    while(i<=n)
    {
        sum+=i;
        i++;
    }
    printf("1부터 %d까지의 합은 %d입니다", n, sum);
}
~~~

~~~c
#include <stdio.h>

int main(void)
{
    int n,i=1;
    scanf("%d",&n);

    while(i<=n)
    {
        int a, b;
        scanf("%d %d", &a, &b);
        printf("%d\n", a+b);
        i++;
    }
}
~~~

~~~c
#include <stdio.h>

int main(void)
{
    int i=0;
    do
    {
        printf("1---새로만들기\n");
        printf("2---파일열기\n");
        printf("3---파일닫기\n");
        printf("하나를선택하시오.\n");
        scanf("%d", &i);    
    }
    while(i<1||i>3);

    printf("선택된 메뉴=%d\n", i);
    return 0;
}
~~~

